                                                        <li><div class="tab3_content_list_text"><a href="/Article/index/@inside.crsri.Utility.helper.UrlEncry(@data.articleList[i].articleID)" target="_blank">@System.Web.HttpUtility.HtmlDecode(data.articleList[i].title)</a></div></li>
                                                        n++;
                                                    }
                                                </ul>
                                            }

                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="tab3_content">
                                        @{
                                    int position = 0;
                                    if (data.subjectID == "002003") { position = 5; }
                                    else if (data.subjectID == "002007") { position = 6; }
                                    else if (data.subjectID == "002008") { position = 7; }
                                    else if (data.subjectID == "002009") { position = 8; }

                                    var lmcfgPic = cfgPic.FindAll(a => a.position == position);


                                    <div class="tab3_content_img l">
                                        <ul>
                                            @foreach (crsri.cn.Model.t_web_siteCfgPic_model m in lmcfgPic)
                                            {
                                                <li>
                                                    <a href="@m.linkUrl" target="_blank"><img src="@inside.crsri.Utility.helper.sitePicPath/@m.picName"></a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                            <div class="tab3_content_list_img l">

