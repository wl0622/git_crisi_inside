            <!--tab 科技交流\项目动态\单位文化-->
            <div class="tab3_group box_border">
                <div class="tab3">

                    <div class="tab3_head hd">
                        @{
                            List<string> tabSubjects = new List<string>();
                            tabSubjects.Add("002003"); //水利与科技
                            tabSubjects.Add("002007"); //科技交流
                            tabSubjects.Add("002008"); //项目动态
                            tabSubjects.Add("002009"); //单位文化
                            <ul>
                                @foreach (string s in tabSubjects)
                                {
                                    var data = Model.FindAll(a => a.subjectID == s).First();
                                    <li data-id="@data.subjectID" class="on"><span class="tab3_tit"><a>@data.subjectName</a></span></li>
                                }
                            </ul>
                        }

                    </div>
                    <div class="bd">
                        @{
                            foreach (string s in tabSubjects)
                            {
                                bool isPic = false;
                                int n = 0;
                                var data = Model.FindAll(a => a.subjectID == s).First();
                                if (isPic)
                                {
                                    <div class="tab3_content">
                                        <div class="tab3_content_list">

                                            @for (int k = 1; k <= 2; k++)
                                            {
                                                <ul>
                                                    @for (int i = n; i < k * 7; i++)
