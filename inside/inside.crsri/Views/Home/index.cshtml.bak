@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Action("GetTitleStyle", "DisplayLayout", new { name = "长江科学院内网-首页" })
@model List<inside.crsri.Utility.requestHomeArticleClass>

<style type="text/css">
    html {
        background-image: url(/images/wbg.png);
        background-repeat: no-repeat;
    }
</style>

<script type="text/javascript">


    $(function () {
        $("#searchClick").bind("click", function () {

            var queryKey = $("#keyword").val();
            window.open("/Article/SearchResult/" + queryKey + "/1");
        });
    });
    function clickMore(el) {

        var $eLi = $(el);
        $eLi.each(function () {

            if ($(this).attr("class") == "on") {

                let subjectId = $(this).attr("data-id");
                window.open("/Article/list/" + subjectId);
            }
        });
    }
</script>
@{
    List<crsri.cn.Model.t_web_siteCfg_model> cfgList = ViewBag.siteCfg as List<crsri.cn.Model.t_web_siteCfg_model>;
    string bgcss = "index_general_bg";
    if (cfgList.FindAll(a => a.cfgName == "isNewYearBg").First().cfgVal == true)
    {
        <style type="text/css">
            body {
                background: #fff;
            }
        </style>
        <div class="index_newyear_body"></div>
        bgcss = "index_newyear_bg";
    }
}

<div class="@bgcss">
    <!-- 主体内容框 -->
    <div class="contentbox wid_main">
        <div style="width:970px;" class="l">
            <div class="top_box">

                <div class="toutiao_box">

                    @{
                        List<crsri.cn.Model.t_web_siteCfgBase_model> baseCfg = ViewBag.siteCfgBase as List<crsri.cn.Model.t_web_siteCfgBase_model>;
                        string colorCss = baseCfg.FindAll(a => a.item == "toutiaoColor").First().itemVal;
                        string onTopBold = cfgList.FindAll(a => a.cfgName == "isOnTopBold").First().cfgVal == true ? "font-weight:bold" : "";
                        crsri.cn.Model.t_web_article_model onTop = ViewBag.toutiao as crsri.cn.Model.t_web_article_model;
                        <span class="toutiao_content_title">
                            <a style="color:@colorCss;@onTopBold" href="/Article/index/@inside.crsri.Utility.helper.UrlEncry(@onTop.articleID)" target="_blank">@onTop.titletoutiao </a>
                        </span>
                    }

                </div>
            </div>
            @*图片新闻*@
            <div style="height: 280px; margin-top: 10px;">
                <div class="news_banner l">
                    @{
                        List<crsri.cn.Model.t_web_article_model> slidePic = ViewBag.picxw as List<crsri.cn.Model.t_web_article_model>;
                        <div class="hd">
                            <ul>
                                @for (int i = 1; i <= slidePic.Count; i++)
                                {
                                    <li>@Html.Raw(i.ToString())</li>
                                }
                            </ul>
                        </div>
                        <div class="bd">
                            <ul>
                                @foreach (crsri.cn.Model.t_web_article_model s in slidePic)
                                {
                                    <li>
                                        <a href="/Article/Index/@inside.crsri.Utility.helper.UrlEncry(@s.articleID)" target="_blank">
                                            @Html.Raw(@inside.crsri.Utility.cjkxyUrlHelper.articleOldImgUrlReplace(string.Format("<img src='{0}' alt='{1}'>", s.defaultPicUrl, s.title)))
                                        </a>
                                        <div>
                                            <h2><a href="/Article/Index/@inside.crsri.Utility.helper.UrlEncry(@s.articleID)" target="_blank">@s.title</a></h2>
                                        </div>
                                    </li>
                                }
                            </ul>

                        </div>
                    }
                    <script type="text/javascript">
                        jQuery(".news_banner").slide({
                            mainCell: ".bd ul",
                            autoPlay: true,
                            effect: "fold",
                            mouseOverStop: false,
                            delayTime: 1000,
                            interTime: 5000
                        });
                    </script>
                </div>

                <div class="slys_group l ml-10">
                    <div class="slyw_box">
                        @{
                            var slyw_Items = Model.FindAll(a => a.subjectID == "002012").First();
