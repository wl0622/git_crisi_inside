                                            string isTopBold = cfgList.FindAll(a => a.cfgName == "isTopBold").First().cfgVal == true && m.isTop == true ? "font-weight:bold" : "";
                                            <li>
                                                <span class="slyw_list_title">
                                                    <a href="/Article/index/@inside.crsri.Utility.helper.UrlEncry(@m.articleID)" target="_blank">
                                                        <span class="box_date r">@m.releaseTime</span><span style="color:@topColor;@isTopBold">@System.Web.HttpUtility.HtmlDecode(@m.title)</span>
                                                    </a>
                                                </span>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        }
