@{
    Layout = null;
}
@model crsri.cn.Model.t_web_article_model
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@System.Web.HttpUtility.HtmlDecode(@Model.title)</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="/Content/themes/crsri/css/page.css" />
</head>
<body>
    <div class="expCol_head"></div>
    <!-- 主体内容框 -->
    <div class="contentbox bora_5 backshadow" style="width:1280px;">
        <div class="content" style="padding:0px;">
            <!-- 当前位置 -->
            <div class="siteNav siteNavSubbg fix">
                <div class="l fix zy_cur mb-10 mt-10">
                    <div class="l tit"><img src="/images/icon_location.png"><b class="dib vm">当前位置：</b></div>
                    <p class="l">
                        <a href="/Home/">首页</a><a href="/ExpCol/index">
                            经济发展调研心得体会
                        </a><span>
                            @System.Web.HttpUtility.HtmlDecode(@Model.title)
                        </span>
                    </p>
                </div>
            </div>
            <!-- 子页内容框 -->
            <div class="zy_contentbox" style="border:none;">
                <!-- zy_content -->
                <div class="zy_content fix">

                    <div class="zy_conbox">
                        <div class="zy_newsxq">
                            <div class="xq_tit">
                                <h1>@System.Web.HttpUtility.HtmlDecode(@Model.title)</h1>
                                <p>
                                    <span>文章来源：@Model.releaseDep </span>
                                    <span>作者：@System.Web.HttpUtility.HtmlDecode(Model.author) </span>
                                    <span>发布时间：@Convert.ToDateTime(@Model.releaseTime).ToString("yyyy-MM-dd")</span>
                                </p>
                            </div>
                            <div class="txt">
                                @Html.Raw(@System.Web.HttpUtility.HtmlDecode(@Model.content))
                            </div>
                        </div>
                        @*<div class="zy_share">
                        <h2>
                            <p>上一篇：<a href="#">无</a></p>
                            <p>下一篇：<a href="#">李克强主持召开国务院常务会议 部署进一步促进社区养老和家政服务工作安排</a></p>
                        </h2>
                    </div>*@
                    </div>

                </div>
                <!-- zy_content end -->
            </div>
            <!-- 内容框end -->

        </div>
    </div>
    <div class="footerbox bg">
        <div class="wid_main fix">

            <div class="txt" style="margin:auto;text-align:center">
                <p>主办：长江科学院科研计划处 党群办公室</p>
                <p>支持：长江科学院信息中心</p>
                <p>电话：82926349</p>
            </div>
        </div>
    </div>
</body>
</html>
