@{
    Layout = null;
}
@model crsri.cn.Model.t_web_article_model
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@System.Web.HttpUtility.HtmlDecode(@Model.title)</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="/Content/themes/crsri/css/page.css" />
</head>
<body>
    <div class="tax_head_sub"></div>
    <!-- 子页内容框 -->
    <div class="zy_contentbox" style="min-height:780px;background-color:#fff;">
        <!-- zy_content -->
        <div class="zy_content fix">

            <div class="zy_conbox">
                <div class="zy_newsxq">
                    <div class="xq_tit">
                        <h1>@System.Web.HttpUtility.HtmlDecode(@Model.title)</h1>
                        <p>
                            <span>文章来源：@Model.releaseDep </span>
                            <span>作者：@System.Web.HttpUtility.HtmlDecode(Model.author) </span>
                            <span>发布时间：@Convert.ToDateTime(@Model.releaseTime).ToString("yyyy-MM-dd")</span>
                        </p>
                    </div>
                    <div class="txt">
                        @Html.Raw(@System.Web.HttpUtility.HtmlDecode(@Model.content))
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 内容框end -->
    <div class="tax_footer">
        <div class="tax_footer_c">
            <p> 主办：长江科学院财务处   &nbsp;&nbsp; 支持：长江科学院信息中心 &nbsp;&nbsp; 电话：82926349</p>
        </div>
    </div>
</body>
</html>
