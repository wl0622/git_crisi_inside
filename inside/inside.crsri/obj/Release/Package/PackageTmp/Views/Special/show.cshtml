@{
    ViewBag.Title = "show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Action("GetTitleStyle", "DisplayLayout", new { name = "长江科学院-" + @System.Web.HttpUtility.HtmlDecode(@Model.title) })
<body>

    <!-- 主体内容框 -->
    <div class="contentbox wid_main bora_5 backshadow">
        <div class="content" style="padding:0px;">
            <!-- 当前位置 -->
            <div class="siteNav bdb_d fix">
                <div class="txtScroll-top l fix zy_cur mb-10 mt-10">
                    <div class="l tit"><img src="/images/icon_location.png"><b class="dib vm">当前位置：</b></div>
                    <p class="l">
                        <a href="/Home/">首页</a><a href="#" id="curSubjectItem">
                        @{
                            crsri.cn.Model.t_web_special_model curSpecItem = ViewBag.specialItem as crsri.cn.Model.t_web_special_model;
                            @Html.Raw(curSpecItem.specialName);
                        }
                          
                        </a><span>
                            @System.Web.HttpUtility.HtmlDecode(@Model.title)
                        </span>
                    </p>
                </div>
                <!-- 时间 -->
                @*<div class="timebox fc r">
                        <script type="text/javascript" src="js/show_date.js"></script>
                    </div>*@
            </div>
            <!-- 子页内容框 -->
            <div class="zy_contentbox">
                <!-- zy_content -->
                <div class="zy_content fix">

                    <div class="zy_conbox">
                        <div class="zy_newsxq">
                            <div class="xq_tit bdb_d">
                                <h1>@System.Web.HttpUtility.HtmlDecode(@Model.title)</h1>
                                <p>
                                    <span>文章来源：@Model.releaseDep </span>
                                    <span>作者：@System.Web.HttpUtility.HtmlDecode(Model.author) </span>
                                    <span>发布时间：@Convert.ToDateTime(@Model.releaseTime).ToString("yyyy-MM-dd")</span>
                                </p>
                            </div>
                            <div class="txt">
                                @Html.Raw(@System.Web.HttpUtility.HtmlDecode(@Model.content))
                            </div>
                        </div>
                    </div>

                </div>
                <!-- zy_content end -->
            </div>
            <!-- 内容框end -->
            <!-- 友情链接 -->


        </div>
    </div>
</body>
