@{
    Layout = null;
}

<!DOCTYPE html>
@model List<inside.crsri.Models.statisticsModel>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>本站新闻稿统计</title>
    <script type="text/javascript" src="/Scripts/jquery-1.11.0.min.js"></script>

    <style type="text/css">
        body {
            margin: 0px;
            padding: 0px;
        }

        .main {
            background: url(/images/xwtj/tjbg.jpg) no-repeat center center;
            width: 980px;
            min-height: 900px;
            margin: auto;
            margin-top: 10px;
        }

        .tit {
            width: 980px;
            height: 48px;
            line-height: 48px;
            display: block;
            text-align: center;
            color: #28becf;
            font-size: 18px;
            font-weight: bold;
        }

        .tool {
            width: 840px;
            height: 50px;
            line-height: 50px;
            margin: auto;
            border-bottom: 1px solid #026FBC;
        }

        .lab_tit {
            color: #1296db;
            font-weight: bold;
        }

        .lab_tit_sub {
            font-size: 14px;
            color: #666;
            width: 120px;
            text-align: center;
        }

        .sang_Calender {
            border: 1px solid #026FBC;
            height: 30px;
            line-height: 30px;
            width: 194px;
            background: url(/images/xwtj/date.png) no-repeat right center;
            cursor: pointer;
            background-color: #F0F0F0;
            font-size: 14px;
        }

        .lab {
            font-size: 14px;
            color: #666;
            width: 120px;
            text-align: center;
            margin-left: 18px;
        }

        .submit {
            width: 60px;
            height: 30px;
            background-color: #026FBC;
            border: 1px solid #1296db;
            color: #fff;
            cursor: pointer;
        }

        .list {
            width: 320px;
            margin-left: 70px;
            height: 660px;
            border: 1px solid #1296db;
            margin-top: 20px;
        }

            .list ul:first-child {
                height: 40px;
                line-height: 40px;
                font-size: 18px;
                font-weight: bold;
            }

            .list ul {
                margin: 0px;
                padding: 0px;
            }

                .list ul li {
                    list-style-type: none;
                    float: left;
                    width: 160px;
                    text-align: center;
                    font-size: 14px;
                    margin: 2px 0px;
                }

        .table {
            width: 300px;
            font-size: 12px;
            text-align: center;
            background-color: #fff;
            margin-left: 70px;
            margin-top: 8px;
        }

            .table th {
                background: #026FBC;
                color: #FFF;
                padding: 10px 10px;
                text-align: center;
                margin-bottom: 8px;
                border-left: 1px solid #FFF;
            }

            .table tr:nth-child(2n) td {
                background: #F0F0F0;
            }

            .table td {
                border-top: 1px solid #444;
                border-left: 1px solid #444;
                padding: 4px 0;
            }

            .table th:last-child {
                border-right: 1px solid #026FBC;
            }

            .table th:first-child {
                border-left: 1px solid #026FBC;
            }

            .table td:last-child {
                border-right: 1px solid #444;
            }

            .table tr:last-child td {
                border-bottom: 1px solid #444;
            }
    </style>

    <script type="text/javascript">
        function reset() {
            $("input[name='startDate']").val("");
            $("input[name='endDate']").val("");
        }
    </script>
</head>
<body>
    <div class="main">
        <span class="tit">本站新闻稿统计</span>
        <form action="/xwtj/index" method="post">
            <div class="tool">
                <label class="lab_tit">新闻稿分段统计</label>
                <label class="lab">起始年月日</label> <input type="text" class="sang_Calender" name="startDate" />
                <label class="lab">终止年月日</label> <input type="text" class="sang_Calender" name="endDate" />
                <input type="submit" class="submit" />
                <input type="button" class="submit" value="重填" onclick="reset();" />
            </div>
        </form>
        <script type="text/javascript" src="/Scripts/datetime.js"></script>
        <table class="table">
            <tr>
                <th>投稿单位</th>
                <th>数量</th>
            </tr>

            @if (Model.Count > 0)
            {
                foreach (inside.crsri.Models.statisticsModel m in Model)
                {
                    <tr>
                        <td>@m.dep</td>
                        <td>@m.cnt</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2">查询结果: 无</td>

                </tr>
            }





        </table>
    </div>
</body>
</html>
